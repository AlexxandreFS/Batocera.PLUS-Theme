<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="system">
        <!-- When random box -->
        <image name="box" extra="true">
            <pos>0.535 0.30</pos>
            <maxSize>0.40 0.55</maxSize>
        </image>

        <video name="videobox" extra="true">
            <pos>0.535 0.30</pos>
            <maxSize>0.40 0.55</maxSize>
        </video>

        <image name="logo">
            <!-- if system2 exists, take this version -->
            <path>./../../${system.theme}/main/system2.svg</path>
        </image>

        <carousel name="systemcarousel">
            <type>vertical</type>
            <pos>0 0.4369</pos>
            <maxSize>0.24 0.15</maxSize>
            <pos>0 0</pos>
            <size>0.23 1</size>
            <color>00000000</color>
            <colorEnd>00000000</colorEnd>
            <gradientType>horizontal</gradientType>
            <logoScale>1.7</logoScale>
            <logoSize>0.1 0.1</logoSize>
            <maxLogoCount>5</maxLogoCount>
            <systemInfoDelay>0</systemInfoDelay>
        </carousel>

        <text name="systemInfo">
            <pos>0.00 0.57</pos>
            <size>1 0.00</size>
            <backgroundColor>0000FF00</backgroundColor>
            <color>${baseColor}</color>
            <glowColor>${glowColor}</glowColor>
            <glowSize>2</glowSize>
            <reflexion>0.0 0.0</reflexion>
        </text>

        <!--
        <image name="CenterFade" extra="true">
            <tile>false</tile>
            <size>0.40 1</size>
            <pos>0.40 1</pos>
            <origin>1 1</origin>
            <path>./../centerfade_v.png</path>
            <color>${centerFadeColor}</color>
            <visible>false</visible>
        </image>
        -->

        <image name="ControllerOverlay" extra="true">
            <tile>false</tile>
            <pos>0.675 0.40</pos>
            <size>0.4 0</size>
        </image>

        <image name="darkwheel" extra="static" tinyScreen="false">
            <tile>false</tile>
            <origin>0 0</origin>
            <pos>0 0.4369</pos>
            <maxSize>0.24 0.15</maxSize>
            <path>./main/midia/backgroundlogo.svg</path>
            <zIndex>12</zIndex>
        </image>

        <image name="background" extra="true">
            <path>./main/midia/background1.svg</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <color>ffffffff</color>
            <zIndex>0</zIndex>
        </image>
    </view>
</theme>
