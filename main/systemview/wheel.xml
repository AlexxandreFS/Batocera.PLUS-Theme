<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="system">
    <!-- When random box -->
    <image name="box" extra="true">
      <pos>0.587 0.30</pos>
      <maxSize>0.40 0.50</maxSize>
    </image>
    <video name="videobox" extra="true">
      <pos>0.587 0.30</pos>
      <maxSize>0.40 0.50</maxSize>
    </video>
    <image name="logo">
      <!-- if system2 exists, take this version -->
      <path>./../../${system.theme}/art/system2.svg</path>
    </image>
    <carousel name="systemcarousel">
      <type>vertical_wheel</type>
      <pos>0 -0.1</pos>
      <size>0.44 1.1</size>

      <pos>0 -0.3</pos>
      <size>0.44 1.5</size>

      <origin>0 0</origin>
      <color>000000000</color>
	  <colorEnd>0000000</colorEnd>
      <logoScale>1.3</logoScale>
      <logoSize>0.15 0.15</logoSize>
      <logoRotation>16</logoRotation>
      <logoRotationOrigin>-2.0 0.20</logoRotationOrigin>
      <logoAlignment>center</logoAlignment>
      <maxLogoCount>3</maxLogoCount>
      <systemInfoDelay>0.1</systemInfoDelay>
    </carousel>

   <image name="darkwheel" extra="static" tinyScreen="false">
      <tile>false</tile>
	  <color>d3d3d3</color>
      <pos>0.22 0.45</pos>        
      <size>0.27 0.17</size>
      <origin>0.5 0.5</origin>
      <path>./main/midia/logowheel.svg</path>      
      <zIndex>12</zIndex>
    </image>
	
	<image name="background" extra="true">
	 <path>./main/midia/backgroundwhell.png</path>
	 <origin>0 0</origin>
	 <pos>0 0</pos>
	 <size>1 1</size>
	 <color>ffffffff</color>
	 <zIndex>0</zIndex>
	  </image>	

    <text name="systemInfo">
      <pos>0.09 0.57</pos>
      <size>1 0.00</size>
      <backgroundColor>0000FF00</backgroundColor>
      <color>${baseColor}</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>2</glowSize>
      <reflexion>0.0 0.0</reflexion>
    </text>
