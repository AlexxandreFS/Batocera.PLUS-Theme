            <pos>0.02 0.30</pos>
            <maxSize>0.30 0.15</maxSize>
            <origin>0 1</origin>
        </image>

        <image name="controller" extra="true">
            <path>./art/controller.svg</path>
            <pos>0.78 0.30</pos>
